{
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["deno.window", "dom", "dom.iterable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "imports": {
    "$fresh/": "jsr:@fresh/core@2.1.4/",
    "fresh": "jsr:@fresh/core@2.1.4",
    "fresh/": "jsr:@fresh/core@2.1.4/",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^0.0.2",
    "vite": "npm:vite@^6.0.7",
    "preact": "npm:preact@^10.24.0",
    "preact/hooks": "npm:preact@^10.24.0/hooks",
    "preact/jsx-runtime": "npm:preact@^10.24.0/jsx-runtime",
    "preact-render-to-string": "npm:preact-render-to-string@^6.6.3",
    "@preact/signals": "npm:@preact/signals@^1.3.0",
    "@preact/signals-core": "npm:@preact/signals-core@^1.8.0",
    "@/": "./src/",
    "@types/": "./src/types/",
    "@lib/": "./src/lib/",
    "@utils/": "./src/utils/",
    "@signals/": "./signals/",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0"
  },
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/,islands/,signals/ dev.ts",
    "build": "echo 'Fresh 2.0 uses runtime compilation - no build needed'",
    "preview": "deno run -A main.ts",
    "start": "deno run -A main.ts",
    "update": "deno run -A -r jsr:@fresh/update .",
    "test": "deno test --allow-all --parallel --coverage --unsafely-ignore-certificate-errors",
    "test:watch": "deno test --allow-all --watch --unsafely-ignore-certificate-errors",
    "test:e2e": "deno run --allow-all npm:playwright test",
    "check": "deno check dev.ts main.ts fresh.config.ts signals/**/*.ts src/**/*.ts static/**/*.ts tests/**/*.ts components/**/*.tsx islands/**/*.tsx routes/**/*.tsx",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "quality": "deno task fmt && deno task lint && deno task check && deno task test",
    "coverage": "deno coverage --html"
  },
  "exclude": [
    "node_modules",
    "_fresh",
    "coverage"
  ],
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    },
    "exclude": [
      "node_modules",
      "_fresh",
      "e2e",
      "playwright.config.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "node_modules",
      "_fresh",
      "coverage"
    ]
  },
  "test": {
    "include": ["tests/**/*_test.ts"]
  }
}
