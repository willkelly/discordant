{
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "imports": {
    "@/": "./src/",
    "@types/": "./src/types/",
    "@lib/": "./src/lib/",
    "@components/": "./src/components/",
    "@stores/": "./src/stores/",
    "@utils/": "./src/utils/",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0"
  },
  "tasks": {
    "dev": "deno run --allow-all npm:vite",
    "build": "deno run --allow-all npm:vite build",
    "preview": "deno run --allow-all npm:vite preview",
    "test": "deno test --allow-all --parallel --coverage",
    "test:watch": "deno test --allow-all --watch",
    "test:e2e": "deno run --allow-all npm:playwright test",
    "check": "deno check src/**/*.ts tests/**/*.ts",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "quality": "deno task fmt && deno task lint && deno task check && deno task test",
    "coverage": "deno coverage --html"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".svelte-kit",
    "coverage"
  ],
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    },
    "exclude": [
      "node_modules",
      "dist",
      "build",
      ".svelte-kit",
      "e2e",
      "playwright.config.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "node_modules",
      "dist",
      "build",
      ".svelte-kit",
      "coverage"
    ]
  },
  "test": {
    "include": ["tests/**/*_test.ts"]
  }
}
