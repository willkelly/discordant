{
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "imports": {
    "@/": "./src/",
    "@types/": "./src/types/",
    "@lib/": "./src/lib/",
    "@components/": "./src/components/",
    "@stores/": "./src/stores/",
    "@utils/": "./src/utils/"
  },
  "tasks": {
    "dev": "deno run --allow-all npm:vite",
    "build": "deno run --allow-all npm:vite build",
    "preview": "deno run --allow-all npm:vite preview",
    "test": "deno test --allow-all",
    "test:e2e": "deno run --allow-all npm:playwright test"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
